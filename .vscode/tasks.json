{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve (Dev)",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload --force-polling --incremental",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "isBackground": true
    },
    {
      "label": "Build (Production)",
      "type": "shell",
      "command": "bash _scripts/build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
